<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">#000000</item>
        <item name="editTextStyle">@style/EditTextTheme</item>
        <item name="autoCompleteTextViewStyle">@style/EditTextTheme</item>
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:textViewStyle">@style/TextViewTheme</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="buttonStyle">@style/ButtonTheme</item>
    </style>

    <style name="TextViewTheme" parent="@android:style/Widget.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">iran_sans</item>
    </style>

    <style name="EditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textColorHint">#808080</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:fontFamily">iran_sans</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="ButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">iran_sans</item>
        <item name="android:background">@color/mdtp_white</item>
    </style>
</resources>